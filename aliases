# git
-alias g="git"
alias gci="git pull --rebase && rake && git push"

# Bundler
alias b="bundle"
alias be="bundle exec"

# Tests and Specs
alias t="ruby -I test"

# Rails
alias migrate="rake db:migrate"
alias m="migrate"
alias rk="rake"
alias s="rspec"

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local
